<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableView?>
<VBox xmlns:fx="http://javafx.com/fxml"
      spacing="10" alignment="CENTER"
      fx:controller="com.chookie.sense.client.user.LeaderboardController">
      <TableView fx:id="leaders" prefHeight="1000" prefWidth="500">
            <columns>
                  <TableColumn text="Twitter Handle" prefWidth="300">
                        <cellValueFactory>
                              <PropertyValueFactory property="twitterHandle"/>
                        </cellValueFactory>
                  </TableColumn>
                  <TableColumn text="Count" prefWidth="190">
                        <cellValueFactory>
                              <PropertyValueFactory property="tweets"/>
                        </cellValueFactory>
                  </TableColumn>
            </columns>
      </TableView>
</VBox>